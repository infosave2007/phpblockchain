RewriteEngine On

# Block heavy sync user-agents hitting explorer API on shared hosting
RewriteCond %{REQUEST_URI} ^/api/explorer/index\.php$ [NC]
RewriteCond %{HTTP_USER_AGENT} NetworkSyncManager [NC]
RewriteRule .* - [F,L]

# Optional: limit to GET requests (prevent POST floods)
RewriteCond %{REQUEST_URI} ^/api/explorer/index\.php$ [NC]
RewriteCond %{REQUEST_METHOD} !GET
RewriteRule .* - [F,L]
